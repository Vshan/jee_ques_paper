<div id= "questionforms">
<div id="singlequestion">
<h1>Single Question</h1>
<%= form_for :question do |form| %> 
<%= form.label "Subject: " %>
<%= form.select :subject, @scode %>
<%= form.label "Topic: " %>
<%= form.select :topic, @tcode %>
<%= form.label "Sub Topic: " %>
<%= form.select :stopic, @stcode %>
 <p class="actions">
    <%= form.submit 'Generate Single Question'%>
 </p>
<% end %>
</div>
<div id="questionpaper">
<h1>Question Paper</h1>
<%= form_for :question do |form| %> 
<p>
	<%= form.label :year %>
	<%= form.select :year,  (1960..2014) %>
</p>
<p class="actions">
    <%= form.submit 'Generate Question Paper'%>
</p>
<% end %>
</div>
</div>