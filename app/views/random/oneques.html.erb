<h1>Single random question</h1>
<p> <%= @rand.question.html_safe %>  </p>
<%= form_for(:question) do |f| %>

<p> 
<%= f.label "Option: " %>
<%= f.radio_button :option, @rand.opa %>
<%= f.label "#{@rand.opa}" %>
<%= f.radio_button :option, @rand.opb %>
<%= f.label "#{@rand.opb}" %>
<%= f.radio_button :option, @rand.opc %>
<%= f.label "#{@rand.opc}" %>
<%= f.radio_button :option, @rand.opd %>
<%= f.label "#{@rand.opd}" %>
</p>
<p class = "actions">
<%= f.submit 'Go!' %> 
</p>
<% end %>
<p> Go back to
  <%= link_to "home", random_index_path %>
</p>