<h1>Question Paper</h1>
<%= form_for(:question) do |f| %>

<% @scodes.each do |s| %>
<% unless s.scode == 0  #to prevent All from showing up %>
<h2> <%= s.sname %> </h2>
<% @sub[s.scode].each do |question| %> 
<p><%= question.question.html_safe %></p>
 
<p> 
<%= f.label "Option: " %>
<%= f.radio_button question.id, "A" %>
<%= f.label "#{question.opa.html_safe}" %>
<%= f.radio_button question.id, "B" %>
<%= f.label "#{question.opb.html_safe}" %>
<%= f.radio_button question.id, "C" %>
<%= f.label "#{question.opc.html_safe}" %>
<%= f.radio_button question.id, "D" %>
<%= f.label "#{question.opd.html_safe}" %>
</p>

<% end %>
<% end %>
<% end %>
<p class = "actions">
<%= f.submit 'Submit Paper' %> 
</p>
<% end %>
<p> Go back to
  <%= link_to "home", random_index_path %>
</p>